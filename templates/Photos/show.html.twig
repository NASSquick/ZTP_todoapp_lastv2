{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_Photos_details'|trans({'%id%': photo.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_Photos_details'|trans({'%id%': photo.id|default('')}) }}</h1>

    {% if photo is defined and photo is not null %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ photo.id }}</dd>

            <dt>{{ 'label_photo'|trans }}</dt>
            <dd><img src="{{ asset('uploads/' ~ photo.filename) }}" alt="{{ photo.title }}"></dd>

            <dt>{{ 'label_created_at'|trans }}</dt>
            <dd>{{ photo.createdAt|format_date('long') }}</dd>

            <dt>{{ 'label_updated_at'|trans }}</dt>
            <dd>{{ photo.updatedAt|format_date('long') }}</dd>

            <dt>{{ 'label_title'|trans }}</dt>
            <dd>{{ photo.title }}</dd>

            <dt>{{ 'label_text'|trans }}</dt>
            <dd>{{ photo.text }}</dd>
        </dl>

        {% if comments is defined and comments|length > 0 %}
            <h3>Komentarze</h3>
            <div class="row justify-content-around">
                {% for comment in comments %}
                    <div style="border: 1px solid #000000; padding: 10px; margin-bottom: 10px;">
                        <dl class="dl-horizontal">
                            <dt>{{ 'label_nick'|trans }}</dt>
                            <dd>{{ comment.nick }}</dd>

                            <dt>{{ 'label_email'|trans }}</dt>
                            <dd>{{ comment.email }}</dd>

                            <dt>{{ 'label_text'|trans }}</dt>
                            <dd>{{ comment.text }}</dd>

                            <dt>{{ 'label_created_at'|trans }}</dt>
                            <dd>{{ comment.createdAt|date('Y-m-d H:i') }}</dd>
                        </dl>
                    </div>
                {% endfor %}
            </div>
        {% else %}
            <p>{{ 'No comments yet.' }}</p>
        {% endif %}

        <p>
            <a href="{{ url('Photos_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>{{ 'message_item_not_found'|trans }}</p>
    {% endif %}
{% endblock %}
