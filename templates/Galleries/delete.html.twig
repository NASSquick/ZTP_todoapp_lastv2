{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_Galleries_delete'|trans({'%id%': gallery.id|default('')}) }}
{% endblock %}

{% block body %}
    <div id="container5">
        <div id="form2">
            <h1>{{ 'title_Galleries_delete'|trans({'%id%': gallery.id|default('')}) }}</h1>
            {{ form_start(form, { method: 'DELETE', action: url('galleries_delete', {id: gallery.id}) }) }}
            {{ form_widget(form) }}
            <div class="form-group row float-sm-right">
                <input type="submit" value="{{ 'action_delete'|trans }}" class="btn btn-primary" />
            </div>
            <div class="form-group row float-sm-left">
                <a href="{{ url('galleries_index') }}" class="btn btn-link">
                    {{ 'action_back_to_list'|trans }}
                </a>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
