{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title_Comments_details'|trans({'%id%': comments.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'title_Comments_details'|trans({'%id%': comments.id|default('')}) }}</h1>
    {% if comment is defined and comment|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'label_id'|trans }}</dt>
            <dd>{{ comment.id }}</dd>
            <dt>{{ 'label_created_at'|trans }}</dt>
            <dd>{{ comment.createdAt|format_date('long')}}</dd>
            <dt>{{ 'label_updated_at'|trans }}</dt>
            <dd>{{ comment.updatedAt|format_date('long')}}</dd>
            <dt>{{ 'label_nick'|trans }}</dt>
            <dd>{{  comment.nick }}</dd>
            <dt>{{ 'label_email'|trans }}</dt>
            <dd>{{  comment.email }}</dd>
            <dt>{{ 'label_text'|trans }}</dt>
            <dd>{{  comment.text }}</dd>
        </dl>
        <p>
            <a href="{{ url('Comments_index') }}" title="{{ 'action_back_to_list'|trans }}">
                {{ 'action_back_to_list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'message_item_not_found'|trans }}
        </p>
    {% endif %}
{% endblock %}
